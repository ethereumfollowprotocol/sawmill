{
  "name": "sawmill",
  "version": "1.0.0",
  "description": "Automated Railway log analysis tool with AI insights and GitHub issue creation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "railway:deploy": "npm run build && railway up",
    "railway:logs": "railway logs",
    "railway:shell": "railway shell"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.1",
    "@octokit/rest": "^20.1.1",
    "grammy": "^1.21.1",
    "nodemailer": "^6.9.13",
    "node-cron": "^3.0.3",
    "dotenv": "^16.4.5",
    "redis": "^4.6.13",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.11.30",
    "@types/nodemailer": "^6.4.15",
    "@types/node-cron": "^3.0.11",
    "@types/redis": "^4.0.11",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "tsx": "^4.7.2",
    "typescript": "^5.4.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}